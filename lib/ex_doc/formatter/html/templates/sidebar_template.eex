<header id="header">
  <%= if url = config.homepage_url || config.source_url do %>
    <h1><a href="<%= url %>"><%= config.project %></a></h1>
  <% else %>
    <h1><%= config.project %></h1>
  <% end %>
  <h2>v<%= config.version %></h2>
  <button type="button" class="btn btn-default btn-sm mobile-nav-toggle" data-toggle="offcanvas" aria-label="Close">
    <span class="fa fa-bars" aria-hidden="true"></span>
  </button>
</header>

<div class="row row-offcanvas row-offcanvas-left">
<section id="sidebar" class="col-xs-6 col-sm-3 sidebar-offcanvas">
  <p class="pull-right visible-xs">
    <button type="button" class="btn btn-default btn-sm" data-toggle="offcanvas" aria-label="Close">
      <span class="fa fa-times" aria-hidden="true"></span>
    </button>
  </p>

  <ul class="main-nav">
    <%= if has_readme do %>
      <li>
        <a href="readme.html">README</a>
      </li>
    <% end %>
    <li>
      <a href="overview.html">Overview</a>
    </li>
    <%= if Enum.empty?(modules) do %>
      <li role="presentation" class="disabled">Modules</li>
    <% else %>
      <li><a id="modules_list" href="#full_list">Modules</a></li>
    <% end %>
    <%= if Enum.empty?(exceptions) do %>
      <li role="presentation" class="disabled">Exceptions</li>
    <% else %>
      <li><a id="exceptions_list" href="#full_list">Exceptions</a></li>
    <% end %>
    <%= if Enum.empty?(protocols) do %>
      <li role="presentation" class="disabled">Protocols</li>
    <% else %>
      <li><a id="protocols_list" href="#full_list">Protocols</a></li>
    <% end %>
  </ul>

  <div id="search" class="row">
    <div class="col-xs-10">
      <div class="input-group input-group-sm">
        <button class="btn btn-default" type="button" aria-label="Search">
          <span class="fa fa-search" aria-hidden="true"></span>
        </button>
        <label for="search_field" class="sr-only">Search</label>
        <input type="text" id="search_field" class="form-control" placeholder="search" autocomplete="off" autofocus="autofocus" results="0">
      </div><!-- /input-group -->
    </div><!-- /.col-xs-10 -->
    <div class="col-xs-2" id="spinning">
      <span aria-hidden="true"></span>
    </div><!-- /.col-xs-2 -->
  </div><!-- /#search .row -->

  <script src="dist/sidebar_items.js" defer></script>

  <div class="nav-list">
    <ul id="full_list">
    </ul>
  </div>

  <div id="no_results"></div>
</section><!--/.sidebar-offcanvas -->
<section id="content" class="row col-xs-12 col-sm-9">
