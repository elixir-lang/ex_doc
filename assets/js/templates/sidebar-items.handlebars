<ul id="full-list">
{{#each this as |node nodeId|}}
    <li class="node{{#isLocal node.id}} clicked{{/isLocal}}">

    {{!-- When visiting a module page, the link to this module page
    in the menu should not link to a new page, instead should link
    to the top of the page itself. --}}
    <a href="{{#isLocal node.id}}#content{{else}}{{node.id}}.html{{/isLocal}}" title="{{node.title}}" class="object-link">{{node.title}}</a>

    {{!-- Extra pages --}}
    {{#if node.headers}}
      <ul>
        {{#each node.headers}}
          <li class="docs">
            <a href="{{#isNotLocal node.id}}{{node.id}}.html{{/isNotLocal}}#{{{anchor}}}" class="doclink">{{id}}</a>
          </li>
        {{/each}}
      </ul>
    {{/if}}

    {{#showSummary node}}
    <ul>
      <li class="docs">
        <a href="{{#isNotLocal node.id}}{{node.id}}.html{{/isNotLocal}}#summary" class="doclink">Summary</a>
      </li>
      {{#if node.types}}
        <li class="docs">
          <a href="{{#isNotLocal node.id}}{{node.id}}.html{{/isNotLocal}}#types" class="doclink">Types</a>
          <ul class="types-list deflist">
            {{#each node.types}}
              <li>
                <a href="{{#isNotLocal node.id}}{{node.id}}.html{{/isNotLocal}}#{{anchor}}" class="deflink">{{id}}</a>
              </li>
            {{/each}}
          </ul>
        </li>
      {{/if}}
      {{#if node.functions}}
        <li class="docs">
          <a href="{{#isNotLocal node.id}}{{node.id}}.html{{/isNotLocal}}#functions" class="doclink">Functions</a>
          <ul class="functions-list deflist">
            {{#each node.functions}}
              <li>
                <a href="{{#isNotLocal node.id}}{{node.id}}.html{{/isNotLocal}}#{{anchor}}" class="deflink">{{id}}</a>
              </li>
            {{/each}}
          </ul>
        </li>
      {{/if}}
      {{#if node.macros}}
        <li class="docs">
          <a href="{{#isNotLocal node.id}}{{node.id}}.html{{/isNotLocal}}#macros" class="doclink">Macros</a>
          <ul class="macros-list deflist">
            {{#each node.macros}}
              <li>
                <a href="{{#isNotLocal node.id}}{{node.id}}.html{{/isNotLocal}}#{{anchor}}" class="deflink">{{id}}</a>
              </li>
            {{/each}}
          </ul>
        </li>
      {{/if}}
      {{#if node.callbacks}}
        <li class="docs">
          <a href="{{#isNotLocal node.id}}{{node.id}}.html{{/isNotLocal}}#callbacks" class="doclink">Callbacks</a>
          <ul class="callbacks-list deflist">
            {{#each node.callbacks}}
              <li>
                <a href="{{#isNotLocal node.id}}{{node.id}}.html{{/isNotLocal}}#{{anchor}}" class="deflink">{{id}}</a>
              </li>
            {{/each}}
          </ul>
        </li>
      {{/if}}
    </ul>
    {{/showSummary}}
  </li>
{{/each}}
</ul>
